<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f9;
      overflow-x: hidden;
    }

    .sidebar {
      background: linear-gradient(180deg, #111, #222);
      width: 260px;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 20px;
      overflow-y: auto;
      transition: transform 0.3s ease;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
    }

    .sidebar.hidden {
      transform: translateX(-100%);
    }

    .sidebar .nav-link {
      color: white;
      padding: 15px;
      border-radius: 5px;
      margin: 5px 10px;
      display: flex;
      align-items: center;
    }

    .sidebar .nav-link:hover {
      background-color: #ff4444;
      color: white;
    }

    .sidebar .nav-link.active {
      background-color: #ff4444;
    }

    .sidebar-toggler {
      background-color: #ff4444;
      border: none;
      font-size: 24px;
      color: white;
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1050;
      border-radius: 50%;
      width: 45px;
      height: 45px;
      display: none;
      /* Hidden on larger screens */
    }

    .content {
      margin-left: 260px;
      /* Match this to the sidebar width */
      padding: 20px;
      transition: margin-left 0.3s ease;
    }

    .content.expanded {
      margin-left: 0;
    }

    .card {
      margin-bottom: 20px;
      /* Space between cards */
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.hidden {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
        /* Remove left margin on smaller screens */
      }

      .sidebar-toggler {
        display: block;
        /* Show toggle button on smaller screens */
      }
    }

    @media (min-width: 769px) {
      .sidebar-toggler {
        display: none;
        /* Hide toggle button on larger screens */
      }

      .sidebar {
        transform: translateX(0);
      }

      .content {
        margin-left: 260px;
      }
    }
  </style>
</head>

<body>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <ul class="navbar-nav w-100">
      <li class="nav-item">
        <a class="nav-link a" href="/admin/dashboard"><i class="fas fa-chart-pie"></i> Statistics</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/usermanage"><i class="fas fa-users"></i> User Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/products"><i class="fas fa-box"></i> Product Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/ordermanagement"><i class="fas fa-file-invoice"></i> Order Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/salesreport"><i class="fas fa-chart-line"></i> Sales Report</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/offer"><i class="fas fa-gift"></i> Offer</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/coupun"><i class="fas fa-ticket-alt"></i> Coupon</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/admin/category"><i class="fas fa-tags"></i> Category</a>
      </li>
     
      <li class="nav-item">
        <a class="nav-link" href="/admin/logout"><i class="fas fa-cog"></i> Logout</a>
      </li>
    </ul>
  </div>
  <!-- Sidebar toggle button -->
  <button class="sidebar-toggler" id="sidebar-toggler">
    &#x22EE; <!-- Unicode for 3 vertical dots -->
  </button>

  <!-- Main content -->
  <div class="content" id="content">
    <h1>Category</h1>
    {{#if category_err}}
    <div style="color: green;">
      <h1>
        {{category_err}}
      </h1>


    </div> <!-- Display success message -->


    {{/if}}



    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <div class="d-flex justify-content-end">
      <form action="/admin/addcategory" method="post">
        <button class="btn btn-primary">Add Category</button>
      </form>

    </div>

    <table class="table table-striped">
      <thead>
        <tr>

          <th scope="col">Category Name</th>
          <th scope="col">discription</th>
          <th scope="col">List/Unlist </th>
          <!-- <th scope="col">Handle</th> -->
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
        <tr>
          {{!-- <th scope="row">1</th> --}}
          <td>{{this.categoryname}}</td>

          <td>{{this.discription}}</td>
          <td>{{this.isblocked}}</td>
          {{!-- <form action="/admin/block" method="post"></form> --}}
          <td>
            <form action="/admin/blockcategory/{{this.id}}" onsubmit=" alerts(event)" method="POST">
              <input type="submit" value="Unlist" style="background-color: red; color:white">

            </form>
          </td>
          <td>
            <form action="/admin/unblockcategory/{{this.id}}" onsubmit=" alerts(event)" method="POST">
              <input type="submit" value="List" style="background: green; color:white">
            </form>
          </td>
          <td>
            <form action="/admin/editcategory/{{this.id}}" onsubmit=" alerts(event)" method="post">
              <input type="submit" value="Edit" style="background-color: #111; color:white">
            </form>
          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>

    <div class="pagination">
      {{#if (gt totalPages 1)}}
      <ul>
        {{!-- Previous Button --}}
        {{#if (gt currentPage 1)}}
        <li><a href="?page={{subtract currentPage 1}}">Previous</a></li>
        {{/if}}

        {{!-- Page Numbers --}}
        {{#each (range 1 totalPages)}}
        <li class="{{#eq this ../currentPage}}active{{/eq}}">
          <a href="?page={{this}}">{{this}}</a>
        </li>
        {{/each}}

        {{!-- Next Button --}}
        {{#if (lt currentPage totalPages)}}
        <li><a href="?page={{add currentPage 1}}">Next</a></li>
        {{/if}}
      </ul>
      {{/if}}
    </div>

    <style>
      .pagination ul {
        list-style-type: none;
        display: flex;
        gap: 10px;
      }

      .pagination ul li a {
        padding: 8px 12px;
        text-decoration: none;
        color: #333;
      }

      .pagination ul li.active a {
        font-weight: bold;
        color: red;
        /* Highlight the active page */
      }

      .pagination ul li a:hover {
        background-color: #ddd;
      }
    </style>

    <script>
      const sidebar = document.getElementById('sidebar');
      const sidebarToggler = document.getElementById('sidebar-toggler');
      const content = document.getElementById('content');

      sidebarToggler.addEventListener('click', () => {
        sidebar.classList.toggle('hidden');
        content.classList.toggle('expanded');
      });
    </script>

    <script>

      async function alerts(event) {
        if (event) event.preventDefault(); 

        const result = await Swal.fire({
          icon: 'warning',
          title: 'Warning',
          text: 'Are you sure to perform this action?',
          showCancelButton: true,
          confirmButtonText: 'Yes',
          cancelButtonText: 'No'
        });

        if (result.isConfirmed) {
          // Allow form submission by using event.target.submit()
          event.target.submit();
        } else {
          console.log('Action cancelled');
        }
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>