            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .add-coupon-btn:hover {
            background-color: #ff2222;
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.hidden {
                transform: translateX(0);
            }

            .content {
                margin-left: 0;
            }

            .sidebar-toggler {
                display: block;
            }
        }

        @media (min-width: 769px) {
            .sidebar-toggler {
                display: none;
            }

            .sidebar {
