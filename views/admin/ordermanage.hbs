<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            overflow-x: hidden;
        }

        .sidebar {
            background: linear-gradient(180deg, #111, #222);
            width: 260px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            overflow-y: auto;
            transition: transform 0.3s ease;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        .sidebar.hidden {
            transform: translateX(-100%);
        }

        .sidebar .nav-link {
            color: white;
            padding: 15px;
            border-radius: 5px;
            margin: 5px 10px;
            display: flex;
            align-items: center;
        }

        .sidebar .nav-link:hover {
            background-color: #ff4444;
            color: white;
        }

        .sidebar .nav-link.active {
            background-color: #ff4444;
        }

        .sidebar-toggler {
            background-color: #ff4444;
            border: none;
            font-size: 24px;
            color: white;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1050;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            display: none;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        .card {
            margin-bottom: 20px;
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.hidden {
                transform: translateX(0);
            }

            .content {
                margin-left: 0;
            }

            .sidebar-toggler {
                display: block;
            }
        }

        .table-container {
            padding: 15px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-select {
            max-width: 150px;
            padding: 5px;
            font-size: 14px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .btn-custom {
            border-radius: 5px;
            font-size: 14px;
            padding: 5px 10px;
            margin-right: 5px;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
    <ul class="navbar-nav w-100">
      <li class="nav-item">
        <a class="nav-link a" href="/admin/dashboard"><i class="fas fa-chart-pie"></i> Statistics</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/usermanage"><i class="fas fa-users"></i> User Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/products"><i class="fas fa-box"></i> Product Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/admin/ordermanagement"><i class="fas fa-file-invoice"></i> Order Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/salesreport"><i class="fas fa-chart-line"></i> Sales Report</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/offer"><i class="fas fa-gift"></i> Offer</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/coupun"><i class="fas fa-ticket-alt"></i> Coupon</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/category"><i class="fas fa-tags"></i> Category</a>
      </li>
     
      <li class="nav-item">
        <a class="nav-link" href="/admin/logout"><i class="fas fa-cog"></i> Logout</a>
      </li>
    </ul>
  </div>
    <!-- Sidebar toggle button -->
    <button class="sidebar-toggler" id="sidebar-toggler">
        &#x22EE;
    </button>

    <!-- Main content -->
    <div class="content" id="content">
        <div class="table-container">
            <h2 class="mb-4">Order Details</h2>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>

                        <th>Name</th>
                        <th>Order ID</th>

                        <th>Price</th>
                        <th>Payment Method</th>
                        <th>status</th>
                        <th>action</th>
                        <th></th>


                    </tr>
                </thead>
                <tbody>

                    {{#each out}}
                    <tr>
                        <td>{{this.userID.username}}</td>
                        <td>{{this._id}}</td>
                        <input type="hidden" value="{{this._id}}" id="userid">
                        <td>{{this.totalprice}}</td>
                        <td>{{this.paymentMethods}}</td>
                        <td>
                            <div style="padding:5px;justify-content:center"><strong
                                    class="div-status">{{this.status}}</strong></div>



                        </td>
                        {{!-- <td><select class="order-status" data-id="{{this._id}}">
                                <option value="pending">pending</option>
                                <option value="shipped">
                                    shipped
                                </option>
                                <option value="delevered">
                                    deleverd
                                </option>
                                <option value="canceled">
                                    canceled
                                </option>

                            </select>
                            </td> --}}
                            <td>
                                <form action="/admin/orderdetails/{{this._id}}"  method="get">
                                <input type="submit" value="View" class="btn btn-outline-info">
                                </form>
                            </td>
                        {{/each }}

                    </tr>


                </tbody>
            </table>
        </div>
        <div class="pagination">
            {{#if (gt currentPage 1)}}
            <a href="?page={{subtract currentPage 1}}" class="prev">Prev</a>
            {{/if}}

            {{#each (range 1 totalPages) as |pageNum|}}
            <a href="?page={{pageNum}}" class="{{#if (eq pageNum currentPage)}}active{{/if}}">{{pageNum}}</a>
            {{/each}}

            {{#if (lt currentPage totalPages)}}
            <a href="?page={{add currentPage 1}}" class="next">Next</a>
            {{/if}}
        </div>
        <style>
            .pagination {
                display: flex;
                justify-content: center;
                margin-top: 20px;
            }

            .pagination a {
                padding: 8px 16px;
                margin: 0 5px;
                text-decoration: none;
                background-color: #f1f1f1;
                border-radius: 4px;
                color: #333;
            }

            .pagination a:hover {
                background-color: #ddd;
            }

            .pagination a.active {
                background-color: #007bff;
                color: white;
            }

            .pagination .prev,
            .pagination .next {
                font-weight: bold;
            }
        </style>
    </div>
    <script>
        let x = document.querySelectorAll('.div-status')
        x.forEach(div => {
          
            if (div.textContent == 'pending') {
                div.style.color = '#c4ba43';
            }
            if (div.textContent == 'shipped' || div.textContent=='delevered') {
                div.style.color = 'green'
            }
            if (div.textContent == 'canceled') {
                div.style.color = 'red'
            }
        });
    </script>
    <script>
        document.querySelectorAll('.order-status').forEach(dropdown => {

            dropdown.addEventListener('change', function (event) {
                event.preventDefault()
                let selectedValue = this.value
                const orderid = this.getAttribute('data-id')
                console.log(orderid)
                fetch('/admin/update-order-status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ orderid, status: selectedValue })
                })
                    .then(response => {
                        if (response.ok) {
                            return response.json();
                        } else {
                            return response.text();
                        }
                    })
                    .then(data => {
                        console.log('Response from server:', data);
                        if (data.success) {
                            window.location.href = '/admin/ordermanagement';
                        }
                    })
                    .catch((err) => console.error('Error:', err));
            })

        })

    </script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const sidebarToggler = document.getElementById('sidebar-toggler');
        const content = document.getElementById('content');

        sidebarToggler.addEventListener('click', () => {
            sidebar.classList.toggle('hidden');
            content.classList.toggle('expanded');
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>