<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f9;
      overflow-x: hidden;
      /* Prevent horizontal scrolling */
    }

    .sidebar {
      background: linear-gradient(180deg, #111, #222);
      width: 260px;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 20px;
      overflow-y: auto;
      transition: transform 0.3s ease;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
    }

    .sidebar.hidden {
      transform: translateX(-100%);
    }

    .sidebar .nav-link {
      color: white;
      padding: 15px;
      border-radius: 5px;
      margin: 5px 10px;
      display: flex;
      align-items: center;
    }

    .sidebar .nav-link:hover {
      background-color: #ff4444;
      color: white;
    }

    .sidebar .nav-link.active {
      background-color: #ff4444;
    }

    .sidebar-toggler {
      background-color: #ff4444;
      border: none;
      font-size: 24px;
      color: white;
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1050;
      border-radius: 50%;
      width: 45px;
      height: 45px;
      display: none;
      /* Hidden on larger screens */
    }

    .content {
      margin-left: 260px;
      /* Match this to the sidebar width */
      padding: 20px;
      transition: margin-left 0.3s ease;
    }

    .content.expanded {
      margin-left: 0;
    }

    .card {
      margin-bottom: 20px;
      /* Space between cards */
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.hidden {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
        /* Remove left margin on smaller screens */
      }

      .sidebar-toggler {
        display: block;
        /* Show toggle button on smaller screens */
      }
    }

    @media (min-width: 769px) {
      .sidebar-toggler {
        display: none;
        /* Hide toggle button on larger screens */
      }

      .sidebar {
        transform: translateX(0);
      }

      .content {
        margin-left: 260px;
      }
    }
  </style>
</head>

<body>

  <!-- Sidebar -->
 <div class="sidebar" id="sidebar">
    <ul class="navbar-nav w-100">
      <li class="nav-item">
        <a class="nav-link a" href="/admin/dashboard"><i class="fas fa-chart-pie"></i> Statistics</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/usermanage"><i class="fas fa-users"></i> User Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/admin/products"><i class="fas fa-box"></i> Product Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/ordermanagement"><i class="fas fa-file-invoice"></i> Order Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link  " href="/admin/salesreport"><i class="fas fa-chart-line"></i> Sales Report</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/offer"><i class="fas fa-gift"></i> Offer</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/coupun"><i class="fas fa-ticket-alt"></i> Coupon</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/category"><i class="fas fa-tags"></i> Category</a>
      </li>
     
      <li class="nav-item">
        <a class="nav-link" href="/admin/logout"><i class="fas fa-cog"></i> Logout</a>
      </li>
    </ul>
  </div>


  <button class="sidebar-toggler" id="sidebar-toggler">
    &#x22EE;
  </button>


  <div class="content" id="content">
    <h1>Product Manage </h1>


    <div class="d-flex justify-content-end">

      <form action="/admin/addproduct" method="get">
        <input type="submit" class="btn btn-danger" value="Add product">
      </form>
    </div>


    <!-- product.hbs -->

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Product Image</th>
          <th scope="col">Product Name</th>
          <th scope="col">Category</th>
          <th scope="col">Is Blocked</th>
          <th scope="col">Added Date</th>
          <th scope="col">Regular Price</th>
          <th scope="col">Stock</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td><img src="/{{this.image.[0]}}" alt="Product Image" class="img-fluid" style="width: 100px; height: auto;">
          </td>
          <td>{{this.name}}</td>
          <td>{{this.category.categoryname}}</td>
          <td>{{this.isblocked}}</td>
          <td>{{formatDate this.createdAt}}</td>
          <td>{{this.realprice}}</td>
          <td>{{this.quantity}}</td>
          <td>{{this.status}}</td>
          <td>
            <div class="d-flex flex-column">
              <div class="d-flex justify-content-between mb-2">
                <form action="/admin/block/{{this.id}}" onsubmit="return alerts(event)" method="post" class="me-1">
                  <input type="submit" value="Block" class="btn btn-danger">
                </form>
                <form action="/admin/unblock/{{this.id}}" onsubmit="return alerts(event)" method="post" class="me-1">
                  <input type="submit" value="Unblock" class="btn btn-primary">
                </form>
                <form action="/admin/deleteproduct/{{this.id}}" onsubmit="return alerts(event)"  method="post">
                  <input type="submit" value="Delete" class="btn btn-warning">
                </form>
              </div>
              <form action="/admin/editproduct/{{this.id}}" method="get">
                <input type="submit" value="Edit" class="btn ms-5" style="background-color: black; color:white;">
              </form>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
<script>
 
 async function alerts(event) {
    if (event) event.preventDefault(); // Prevents form submission by default
    
    const result = await Swal.fire({
        icon: 'warning',
        title: 'Warning',
        text: 'Are you sure to perform this action?',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No'
    });

    if (result.isConfirmed) {
        // Allow form submission by using event.target.submit()
        event.target.submit();
    } else {
        console.log('Action cancelled');
    }
}
</script>
    <!-- Pagination -->
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center">
        {{#if (gt currentPage 1)}}
        <li class="page-item">
          <a class="page-link" href="?page={{subtract currentPage 1}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{/if}}

        {{#each (range 1 totalPages)}}
        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
          <a class="page-link" href="?page={{this}}">{{this}}</a>
        </li>
        {{/each}}

        {{#if (lt currentPage totalPages)}}
        <li class="page-item">
          <a class="page-link" href="?page={{add currentPage 1}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
        {{/if}}
      </ul>
    </nav>




    <script>
      const sidebar = document.getElementById('sidebar');
      const sidebarToggler = document.getElementById('sidebar-toggler');
      const content = document.getElementById('content');

      sidebarToggler.addEventListener('click', () => {
        sidebar.classList.toggle('hidden');
        content.classList.toggle('expanded');
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>