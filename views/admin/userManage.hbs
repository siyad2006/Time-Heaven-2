<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f9;
      overflow-x: hidden;
      /* Prevent horizontal scrolling */
    }

    .sidebar {
      background: linear-gradient(180deg, #111, #222);
      width: 260px;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 20px;
      overflow-y: auto;
      transition: transform 0.3s ease;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
    }

    .sidebar.hidden {
      transform: translateX(-100%);
    }

    .sidebar .nav-link {
      color: white;
      padding: 15px;
      border-radius: 5px;
      margin: 5px 10px;
      display: flex;
      align-items: center;
    }

    .sidebar .nav-link:hover {
      background-color: #ff4444;
      color: white;
    }

    .sidebar .nav-link.active {
      background-color: #ff4444;
    }

    .sidebar-toggler {
      background-color: #ff4444;
      border: none;
      font-size: 24px;
      color: white;
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1050;
      border-radius: 50%;
      width: 45px;
      height: 45px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .content {
      margin-left: 260px;
      /* Match this to the sidebar width */
      padding: 20px;
      transition: margin-left 0.3s ease;
    }

    .content.expanded {
      margin-left: 0;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.hidden {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }

      .sidebar-toggler {
        display: block;
      }
    }

    @media (min-width: 769px) {
      .sidebar-toggler {
        display: none;
      }

      .sidebar {
        transform: translateX(0);
      }

      .content {
        margin-left: 260px;
      }
    }
  </style>
</head>

<body>

  <!-- Sidebar -->
<div class="sidebar" id="sidebar">
    <ul class="navbar-nav w-100">
      <li class="nav-item">
        <a class="nav-link a" href="/admin/dashboard"><i class="fas fa-chart-pie"></i> Statistics</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/admin/usermanage"><i class="fas fa-users"></i> User Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/products"><i class="fas fa-box"></i> Product Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/ordermanagement"><i class="fas fa-file-invoice"></i> Order Manage</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/salesreport"><i class="fas fa-chart-line"></i> Sales Report</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/offer"><i class="fas fa-gift"></i> Offer</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/admin/coupun"><i class="fas fa-ticket-alt"></i> Coupon</a>
      </li>
      <li class="nav-item">
        <a class="nav-link " href="/admin/category"><i class="fas fa-tags"></i> Category</a>
      </li>
     
      <li class="nav-item">
        <a class="nav-link" href="/admin/logout"><i class="fas fa-cog"></i> Logout</a>
      </li>
    </ul>
  </div>
  <!-- Sidebar toggle button -->
  <button class="sidebar-toggler" id="sidebar-toggler">
    &#x22EE; <!-- Unicode for 3 vertical dots -->
  </button>

  <!-- Main content -->
  <div class="content" id="content">
    <h1>User Manage</h1>
    <p>Welcome to the user management section.</p>

    <!-- Table for user management -->
    <div class="justify-content-end">
      <table class="table table-striped">
        <thead>
          <tr>
            {{!-- <th scope="col">#</th> --}}
            <th scope="col">Id</th>
            <th scope="col">Email</th>
            <th scope="col">User Name</th>
            <th scope="col">Is blocked</th>
          </tr>
        </thead>

        <tbody>
          <tr>

            {{#each users}}

            <th scope="row">{{this.id}}</th>
            <td>{{this.Email}}</td>
            <td>{{this.username}}</td>

            <td style="color: green;">
              {{this.isblocked}}
            </td>

            <td>
              {{!-- <input type="button" style="background-color: red; color:white" value="Block"> --}}
              <form action="/admin/blockuser/{{this.id}}" onsubmit="return alerts(event)"  method="post">
                <button type="submit" style="background-color: red; color: white;">
                  Block
                </button>
              </form>


            </td>

            <td>
              <form action="/admin/unblockuser/{{this.id}}" onsubmit="return alerts(event)"  method="post">
                <button type="submit" style="background-color: rgb(48, 194, 19); color: white;">
                  Un Block
                </button>
              </form>

            </td>

          </tr>



          {{/each}}
        </tbody>


      </table>
<script>
 
 async function alerts(event) {
    if (event) event.preventDefault(); 
    
    const result = await Swal.fire({
        icon: 'warning',
        title: 'Warning',
        text: 'Are you sure to perform this action?',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No'
    });

    if (result.isConfirmed) {
       
        event.target.submit();
    } else {
        console.log('Action cancelled');
    }
}
</script>

      <nav aria-label="Page navigation example justify-content-center">
        <ul class="pagination">
          {{#if (gt page 1)}}
          <li class="page-item">
            <a class="page-link" href="?page={{subtract page 1}}">Previous</a>
          </li>
          {{/if}}

          {{#each (range 1 totalPages) as |i|}}
          <li class="page-item {{#if (eq i page)}}active{{/if}}">
            <a class="page-link" href="?page={{i}}">{{i}}</a>
          </li>
          {{/each}}

          {{#if (lt page totalPages)}}
          <li class="page-item">
            <a class="page-link" href="?page={{add page 1}}">Next</a>
          </li>
          {{/if}}
        </ul>
      </nav>

      <script>
        const sidebar = document.getElementById('sidebar');
        const sidebarToggler = document.getElementById('sidebar-toggler');
        const content = document.getElementById('content');

        sidebarToggler.addEventListener('click', () => {
          sidebar.classList.toggle('hidden');
          content.classList.toggle('expanded');
        });
      </script>




      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>