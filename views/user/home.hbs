    <div class="container mt-5 mb-3">
        <div class="row">
            {{#each products}}
            <div class="col-6 col-sm-6 col-md-4 col-lg-3 mb-3"> <!-- Changed col-12 to col-6 for mobile -->
                <div class="card h-100">
                    <img src="/{{this.image.[0]}}" class="card-img-top" alt="{{this.title}}">
                    <div class="card-body p-2">
                        <h6 class="card-title text-center mb-1" style="font-size: 0.9em;">{{this.name}}</h6>
                        <!-- Smaller font size for title -->

                        <!-- Unified container for price display -->
                        <p class="card-text price-tag text-center mb-2" style="min-height: 45px; font-size: 0.8em;">
                            {{#if this.offerprice}}
                            <!-- If offerprice exists, show regular price with a strikethrough and offer price -->
                            <span style="text-decoration: line-through; color: grey; font-size: 0.75em;">RS:
                                {{this.realprice}}</span><br>
                            <span style="font-weight: bold; color: #d9534f; font-size: 0.85em;">Offer Price: RS:
                                {{this.offerprice}}</span><br>
                            {{#if this.offerPersent}}
                            <span class="text-success" style="font-size: 0.7em;">Save {{this.offerPersent}}%</span>
                            {{/if}}
                            {{else}}
                            <!-- Display regular price with consistent styling if no offer -->
                            <span style="font-weight: bold; color: #000; font-size: 0.85em;">RS:
                                {{this.realprice}}</span>
                            {{/if}}
                        </p>
                           <p class="text-center mb-2" style="font-size: 0.8rem; color: green;">
                            {{this.quantity}} stocks left
                        </p>

                        <div class="d-flex justify-content-center">
                            <a href="/user/details/{{this.id}}" class="btn btn-shadow btn-sm px-2"
                                style="background-color: #222C74; color: white; font-size: 0.8em;">Show</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
