    <style>
        #twisted-paper-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            /* Disable user interaction */
            overflow: hidden;
        }

        .twisted-paper {
            position: absolute;
            top: -10%;
            width: 20px;
            height: 50px;
            font-size: 25px;
            text-align: center;
            transform-origin: center center;
            animation: fallDown 4s linear infinite;
        }

        @keyframes fallDown {
            0% {
                transform: translateY(0) rotate(0deg);
                opacity: 1;
            }

            100% {
                transform: translateY(100vh) rotate(720deg);
                /* Rotate as it falls */
                opacity: 0;
            }
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const paperContainer = document.getElementById('twisted-paper-container');

            function createTwistedPaper() {
                const paper = document.createElement('div');
                paper.classList.add('twisted-paper');

                // Use text or symbols for the twisted paper. You can also use image URLs
                paper.textContent = 'ðŸŽ‰';  // Using celebration emoji as a placeholder for twisted paper

                // Randomize the horizontal starting position
                paper.style.left = Math.random() * 100 + 'vw'; // Random horizontal position

                // Randomize animation duration for variety
                paper.style.animationDuration = (Math.random() * 2 + 3) + 's'; // Random duration between 3 and 5 seconds

                // Randomize size of the paper
                paper.style.fontSize = Math.random() * 10 + 20 + 'px'; // Random size between 20px and 30px

                paperContainer.appendChild(paper);

                // Remove the paper after animation ends to prevent DOM buildup
                setTimeout(() => {
                    paper.remove();
                }, 5000); // Paper disappears after 5 seconds
            }


            const interval = setInterval(createTwistedPaper, 250); // Adjust interval for more or fewer papers


            setTimeout(() => {
                clearInterval(interval);
            }, 5000);
        });

    </script>

